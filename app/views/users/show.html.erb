<div class="row">
	<div class="small-8 columns">
		<h3><%= @user.name %></h3><br>
		Percent Correct: <%= @user.percent_correct %><br>
		Current Streak: <%= @user.current_streak %><br>
	</div>
	<div class="small-4 columns" align="right">
		<%= link_to "Edit Account", edit_user_path(@user), class: "tiny button" %>
	</div>
</div>


<div class="row">
	<!-- <div id="lowerRight" class="small-4 small-offset-10 columns"> -->
	<div id="lowerRight">
		<%= link_to game_path do %>
		  <i class="fa fa-comments button round fa-4x small"></i>
		<% end %>
		<%= link_to exploreIssues_path do %>
			<i class="fa fa-globe button round fa-4x small"></i>
		<% end %>
		<% if logged_in? %>
			<%= link_to manageLikedQuotes_path do %>
			  <i class="fa fa-star button round fa-4x small"></i>
			<% end %>
		<% end %>
	</div>
</div>