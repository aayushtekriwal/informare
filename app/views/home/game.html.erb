<div>
	<!-- WHO SAID IT -->
	<div class="row">
		<div class="small-centered columns end">
			<h4 align="center">Who said this on the issue of: <%= @quote.issue.title %>?</h4><br>
		</div>


		<!-- QUOTE -->
		<div class="small-12 small-centered columns end">
			<h2 align="center"><%= @quote.body_of_text %></h2>
		</div>
	</div>
		

		<!-- WHEN THE QUOTE WAS SAID -->
	<div class="row">
		<div class="small-12 small-centered columns end">
			<h6 align="right"> - <%= @quote.date_said %></h6>
		</div>
	</div>


	<div class="row">
		<div class="small-12 small-centered columns end">
			<ul class="small-block-grid-3">
				<!-- need to pass in answer + 2 random candidates -->
				<%#= @threeCandidates %>
				<% @threeCandidates.each do |c| %>
					<li align="center">
						<%= link_to checkAnswer_path(user_answer_id: c.id) do %>
							<div style='background-image: url(<%=c.image%>)' class="candidate-image circle"></div>
					<% end %>
					</li>
				<% end %>
			</ul>
			<ul class="small-block-grid-3">
				<% @threeCandidates.each do |c| %>
					<li align="center">
						<strong><a href="#" data-reveal-id=<%= c.safeName %>>
							<%= c.name %> <i class="fa fa-info-circle"></i>
						</strong></a>
					</li>
				<% end %>
			</ul>

			<% @threeCandidates.each do |c| %>
				<div id=<%= c.safeName %> class="reveal-modal" data-reveal aria-hidden="true" role="dialog">
				  <%= c.graphic.html_safe %>
				  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
				</div>
			<% end %>
		</div>
	</div>
</div>

<div class="row">
	<!-- <div id="lowerRight" class="small-4 small-offset-10 columns"> -->
	<div id="lowerRight">
		<% if logged_in? %>
			<i class="fa fa-fire button disabled round fa-4x small"><%= current_user.current_streak.nil? ? 0 : current_user.current_streak %></i>
		<% end %>
			<i class="fa fa-trophy button round fa-4x small"></i>
		<%= link_to exploreIssues_path do %>
			<i class="fa fa-globe button round fa-4x small"></i>
		<% end %>
		<%= link_to manageLikedQuotes_path do %>
		  <i class="fa fa-star button round fa-4x small"></i>
		<% end %>
	</div>
</div>